<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
    <include
        android:id="@+id/app_bar"
        layout="@layout/app_bar" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <com.devspark.robototextview.widget.RobotoTextView
                android:id="@+id/tvUserName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="5dp"
                android:text="User Name"
                android:textAlignment="center"
                android:layout_margin="10dp"
                android:textAppearance="?android:attr/textAppearanceLarge"
                app:typeface="roboto_bold_italic" />

            <ImageView
                android:background="@color/colorPrimaryLight"
                android:id="@+id/ivProfilepic"
                android:padding="5dp"
                android:layout_gravity="center"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:scaleType="centerCrop"
                android:src="@drawable/blankface" />


            <com.devspark.robototextview.widget.RobotoTextView
                android:id="@+id/tvBalance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="5dp"
                android:text="Current Balance: 100 tk"
                android:textAlignment="center"
                android:layout_margin="10dp"
                android:textColor="@color/app_theme_color2"
                android:textAppearance="?android:attr/textAppearanceLarge"
                app:typeface="roboto_thin_italic" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2">

                <com.devspark.robototextview.widget.RobotoTextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="5dp"
                    android:text="Email"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:layout_margin="10dp"
                    app:typeface="roboto_thin_italic" />


                <com.devspark.robototextview.widget.RobotoTextView
                    android:id="@+id/tvEmail"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center"
                    android:text="sifat.oshan@gmail.com"
                    android:layout_marginTop="5dp"
                    android:layout_weight="1"
                    android:textAlignment="center"
                    android:layout_margin="10dp"
                    app:typeface="roboto_thin_italic" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2">

                <com.devspark.robototextview.widget.RobotoTextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="5dp"
                    android:text="Mobile Number"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:layout_margin="10dp"
                    app:typeface="roboto_thin_italic" />


                <com.devspark.robototextview.widget.RobotoTextView
                    android:id="@+id/tvPhone"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center"
                    android:text="017xxxxxxxx"
                    android:layout_marginTop="5dp"
                    android:layout_weight="1"
                    android:textAlignment="center"
                    android:layout_margin="10dp"
                    app:typeface="roboto_thin_italic" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2">

                <com.devspark.robototextview.widget.RobotoTextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="5dp"
                    android:text="Address"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:layout_margin="10dp"
                    app:typeface="roboto_thin_italic" />


                <com.devspark.robototextview.widget.RobotoTextView
                    android:id="@+id/tvAddress"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center"
                    android:text="Kalabagan,Dhaka"
                    android:layout_marginTop="5dp"
                    android:layout_weight="1"
                    android:textAlignment="center"
                    android:layout_margin="10dp"
                    app:typeface="roboto_thin_italic" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2">

                <com.devspark.robototextview.widget.RobotoTextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="5dp"
                    android:text="Profession"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:layout_margin="10dp"
                    app:typeface="roboto_thin_italic" />


                <com.devspark.robototextview.widget.RobotoTextView
                    android:id="@+id/tvProfession"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center"
                    android:text="Student"
                    android:layout_marginTop="5dp"
                    android:layout_weight="1"
                    android:textAlignment="center"
                    android:layout_margin="10dp"
                    app:typeface="roboto_thin_italic" />

            </LinearLayout>

        </LinearLayout>


    </RelativeLayout>
    </LinearLayout>
</ScrollView>
